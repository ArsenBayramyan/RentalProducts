@model RentalProducts.DAL.Models.ViewModels.ViewModels
    <div style="display: flex; justify-content: flex-end;">
        <a asp-action="Logout" asp-controller="Account" class="btn btn-block text-center" style="width: max-content; background-color: dimgrey; color: aliceblue;">
            LogOut
        </a>
    </div>

<div>
    <label class="jumbotron mb-0 text-center" style="padding: 12px; width: 100%; margin-bottom: 20px; margin-top: 15px">Orders</label>
    <table class="table">
        <thead>
            <tr>
                <th>Type</th>
                <th>Days</th>
                <th>Price</th>
                <th>LoyaltyPoint</th>
                <th>ProductName</th>
                <th>CustomerName</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Orders)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Days)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LoyaltyPoint)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Products.Where(p => p.Id == item.ProductId).FirstOrDefault().Name)
                    </td>
                    <td>@Model.Customers.FirstOrDefault(c => c.Id == item.CustomerId).Name</td>
                    <td>
                        <a asp-action="Delete" asp-controller="Orders" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<div>
    <label class="jumbotron mb-0 text-center" style="padding:12px; width: 100%; margin-bottom: 20px; margin-top: 15px">Products</label>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhotoLink)
                </th>
                <th>
                    <button htef="Orders/Delete" class="btn btn-success">AddProduct</button>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhotoLink)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="Products" asp-route-id="@item.Id" class="btn btn-success">Edit</a> |
                        <a asp-action="Delete" asp-controller="Products" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>





